{% extends 'base.html.twig' %}

{% block title %}Blog
{% endblock %}

{% block wrapper %}
	<section class="page-title bg-1">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="block text-center">
						<span class="text-white">News</span>
						<h1 class="text-capitalize mb-4 text-lg">News</h1>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section blog-wrap bg-gray">
		<div class="container">
			<div class="row">
				<div class="col-lg-8">
					<div class="row">
                        {% for a in articles %}
						<div class="col-lg-6 col-md-6 mb-5">
							<div class="blog-item">
								<img src="{{ asset('assets/uploads/articles/') }}{{a.picture}}" alt="" class="img-fluid rounded">

								<div class="blog-item-content bg-white p-4">
									<div class="blog-item-meta  py-1 px-2">
										<span class="text-muted text-capitalize mr-3">
											{# <i class="ti-pencil-alt mr-2"></i> #}{{a.category}}</span>
									</div>

									<h3 class="mt-3 mb-3">
										<a href="#">{{a.title|slice(0,31)}}...</a>
									</h3>
									<p class="mb-4">
                                        {{a.content|striptags|slice(0,133)|raw}}...
                                    </p>

									<a href="#" class="btn btn-small btn-main btn-round-full">Lire la suite</a>
								</div>
							</div>
						</div>
                        {% endfor %}
					</div>
				</div>
				<div class="col-lg-4">
					<div class="sidebar-wrap">
						<div class="sidebar-widget search card p-4 mb-3 border-0">
							<input type="text" class="form-control" placeholder="Rechercher">
							<a href="#" class="btn btn-mian btn-small d-block mt-2">Recherche</a>
						</div>

						<div class="sidebar-widget card border-0 mb-3">
							<img src="{{ asset('images/blog/blog-author.jpg') }}" alt="" class="img-fluid">
							<div class="card-body p-4 text-center">
								<h5 class="mb-0 mt-4">Equipe de rédaction</h5>
								<p>Service communication</p>
								<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Incidunt, dolore.</p>

								<ul class="list-inline author-socials">
									<li class="list-inline-item mr-3">
										<a href="#">
											<i class="fab fa-facebook-f text-muted"></i>
										</a>
									</li>
									<li class="list-inline-item mr-3">
										<a href="#">
											<i class="fab fa-twitter text-muted"></i>
										</a>
									</li>
									<li class="list-inline-item mr-3">
										<a href="#">
											<i class="fab fa-linkedin-in text-muted"></i>
										</a>
									</li>
									<li class="list-inline-item mr-3">
										<a href="#">
											<i class="fab fa-pinterest text-muted"></i>
										</a>
									</li>
									<li class="list-inline-item mr-3">
										<a href="#">
											<i class="fab fa-behance text-muted"></i>
										</a>
									</li>
								</ul>
							</div>
						</div>

						<div class="sidebar-widget latest-post card border-0 p-4 mb-3">
							<h5>Derniers Articles</h5>

                            {% for a in articles %}
							<div class="media border-bottom py-3">
								<a href="#">
                                    <img class="mr-4" style="width: 80px !important; height: auto;" src="{{ asset('assets/uploads/articles/') }}{{a.picture}}" alt="">
                                </a>
								<div class="media-body">
									<h6 class="my-2">
										<a href="#">{{a.title|slice(0,31)}}...</a>
									</h6>
									<span class="text-sm text-muted">{{a.createTime|date("d-m-Y")}}</span>
								</div>
							</div>
                            {% endfor %}
						</div>

						<div class="sidebar-widget bg-white rounded tags p-4 mb-3">
							<h5 class="mb-4">Mots clés</h5>

							<a href="#">Communication</a>
							<a href="#">Marketing opérationel</a>
							<a href="#">Communication digitale</a>
							<a href="#">Publicité</a>
							<a href="#">Evènementiel</a>
							<a href="#">Technologies</a>
						</div>
					</div>
				</div>
			</div>

			<div class="row mt-5">
				<div class="col-lg-8">
					<nav class="navigation pagination py-2 d-inline-block">
						<div class="nav-links">
                            {% if page > 1 %}
							<a class="prev page-numbers" href="{{ path('mediapolis_news', { 'page': page - 1 }) }}">Précédent</a>
                            {% endif %}

                            {% for p in 1..nbPages %}
                                {% if p == page %}
                                    <span aria-current="page" class="page-numbers current">{{p}}</span>
                                {% else %}
                                    <a class="page-numbers" href="{{ path('mediapolis_news', { 'page': p }) }}">{{p}}</a>
                                {% endif %}
                            {% endfor %}

                            {% if page < nbPages %}
							<a class="next page-numbers" href="{{ path('mediapolis_news', { 'page': page + 1 }) }}">Suivant</a>
                            {% endif %}
						</div>
					</nav>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
